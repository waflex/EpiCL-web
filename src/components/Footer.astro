---
import Logo from '../assets/Temple.svg';

// Usa import.meta.glob para buscar archivos en la carpeta "templos"
const templos = import.meta.glob('../pages/templos/*.astro');

// Extrae los nombres de los templos a partir de las rutas
const templosLinks = Object.keys(templos).map((path) => {
  const name = path.split('/').pop().replace('.astro', '');
  return { name, path: `/templos/${name}` };
});
---
<footer class="footer sm:footer-horizontal bg-base-200 text-base-content p-10">
    <aside>
      <Logo width={64} height={64} fill="currentColor" />
      <p>
        Epic The Musical - Chile
        <br />
        Fan Club Oficial
        <br />
        <span class="text-sm">Est. 2023</span>
      </p>
    </aside>
    <nav>
      <h6 class="footer-title">Navegación</h6>
      <a href="/" class="link link-hover">Inicio</a>
      <a href="/About" class="link link-hover">Quiénes Somos</a>
      <a href="#" class="link link-hover">Actividades</a>
      <a href="/Galeria" class="link link-hover">Galería</a>
    </nav>
    <nav>
      <h6 class="footer-title">Templos</h6>
      {templosLinks.map(({ name, path }) => (
        <a href={path} class="link link-hover capitalize">{name}</a>
      ))}
    </nav>
    <nav>
      <h6 class="footer-title">Redes Sociales</h6>
      <div class="grid grid-flow-col gap-4">
